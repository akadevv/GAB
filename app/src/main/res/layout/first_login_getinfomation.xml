<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/firstLoginLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    android:weightSum="100">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="처음 사용을 환영합니다."
        android:textSize="30dp"
        android:gravity="center"
        style="@style/GAB_PlainTextView"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="원활한 이용을 위해 기본 정보를 입력해주세요"
        android:textSize="15dp"
        android:gravity="center"
        style="@style/GAB_PlainTextView"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="필수 입력 정보"
        android:textSize="15dp"
        android:gravity="center"
        style="@style/GAB_PlainTextView"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="40"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text = "사용자 이름"
            style="@style/GAB_PlainTextView" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="0dp"
            android:layout_weight="60"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="ex)홍길동"
            style="@style/GAB_PlainTextView"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="40"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text = "전화번호"

            style="@style/GAB_PlainTextView" />

        <EditText
            android:id="@+id/userPhoneNum"
            android:layout_width="0dp"
            android:layout_weight="60"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="ex)01012345678"
            android:inputType="number"
            style="@style/GAB_PlainTextView"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="추가 입력 정보"
        android:textSize="15dp"
        android:gravity="center"
        style="@style/GAB_PlainTextView"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="40"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text = "은행명"
            style="@style/GAB_PlainTextView" />

        <EditText
            android:id="@+id/userBankName"
            android:layout_width="0dp"
            android:layout_weight="60"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="ex)우리은행"
            style="@style/GAB_PlainTextView"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="40"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text = "계좌번호"
            style="@style/GAB_PlainTextView" />

        <EditText
            android:id="@+id/userBankNum"
            android:layout_width="0dp"
            android:layout_weight="60"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="15dp"
            android:hint="ex)63501157102101"
            style="@style/GAB_PlainTextView"
            />
    </LinearLayout>

    <Button
        android:id = "@+id/firstLoginBT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize = "20dp"
        android:layout_gravity="bottom"
        android:text = "정보 입력 완료"/>

</LinearLayout>

