<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/firstLoginLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:id = "@+id/title_firstloginPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="처음 사용을 환영합니다."
        android:textSize="30dp"
        android:gravity="center"
        />


    <TextView
        android:id="@+id/noticetextview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* 공지사항 * "
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginTop="0dp"

        />


    <TextView
        android:id="@+id/noticetextview1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="◈ 본 어플리케이션은 더치페이 관련 어플입니다. "
        android:textSize="15dp"
        android:gravity="left"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"

        />

    <TextView
        android:id="@+id/noticetextview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="◈ 현재 계산기 기능만 공개하였고, \n 추가 기능(기록,알람)은 추후 공개할 예정입니다"
        android:textSize="15dp"
        android:gravity="left"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        />




    <TextView
        android:id="@+id/noticetextview4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="◈ 개발 : 김준혁, 이창대 | 아이디어 : 최성수"
        android:textSize="15dp"
        android:gravity="left"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id = "@+id/message1_firstloginPage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="* 원활한 이용을 위해 정보를 입력해주세요"
        android:textSize="15dp"
        android:gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="필수 입력 정보"
        android:textSize="15dp"
        android:gravity="center"
        style="@style/GAB_PlainTextView"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="40"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text = "사용자 이름"
            style="@style/GAB_PlainTextView" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="0dp"
            android:layout_weight="60"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="ex)홍길동"
            style="@style/GAB_PlainTextView"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="40"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text = "핸드폰 번호"

            style="@style/GAB_PlainTextView" />

        <EditText
            android:id="@+id/userPhoneNum"
            android:layout_width="0dp"
            android:layout_weight="60"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="ex)01012345678"
            android:inputType="number"
            style="@style/GAB_PlainTextView"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="추가 입력 정보"
        android:textSize="15dp"
        android:gravity="center"
        style="@style/GAB_PlainTextView"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="40"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text = "은행명"
            style="@style/GAB_PlainTextView" />

        <EditText
            android:id="@+id/userBankName"
            android:layout_width="0dp"
            android:layout_weight="60"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="ex)우리은행"
            style="@style/GAB_PlainTextView"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="40"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text = "계좌번호"
            style="@style/GAB_PlainTextView" />

        <EditText
            android:id="@+id/userBankNum"
            android:layout_width="0dp"
            android:layout_weight="60"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textSize="15dp"
            android:hint="ex)123456789"
            style="@style/GAB_PlainTextView"
            />
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_gravity="right" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">


    </LinearLayout>


    <Button
        android:layout_margin="10dp"
        android:background="@drawable/button_yellowbackground"
        android:id = "@+id/firstLoginBT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize = "20dp"
        android:textColor="#565656"
        android:layout_gravity="bottom"
        android:text = "정보 입력 완료"/>


</LinearLayout>

