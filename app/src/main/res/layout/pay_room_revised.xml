<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/DPayRoomMakingScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pay Room 수정방"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pay Room name"
            android:id="@+id/roomname_text"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/roomname_edit"
            android:layout_gravity="center_horizontal"
            android:hint= "방 이름"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pay Room DATE"
            android:id="@+id/roomdate_text"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/room_date_selector"
            android:layout_gravity="center_horizontal"
            android:text= "날짜 선택 버튼"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint = "새로추가할 아이템명"
            android:id="@+id/newItemName"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text ="아이템 추가"
            android:id="@+id/newItemAddBT"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id= "@+id/dutchPayItemContainer"
            android:orientation="vertical">

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="총 비용"
            android:id="@+id/roomprice_text"
            android:layout_gravity="center_horizontal"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/roomprice_edit"
            android:layout_gravity="center_horizontal"
            android:hint= "총 비용"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="참가자 추가"
            android:id="@+id/party_text"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/showFriendListBT"
            android:text = "친구 추가"
            android:layout_gravity="center_horizontal">

        </Button>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/MasterContainer">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id = "@+id/MasterNameTextView"
                android:text = "내 이름 "/>
            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/MasterMoneyEditText"
                android:hint = "내가 내는 금액"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/SelectedPartyContainer">


        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DRoom_makingbutton"
            android:text = "방만들기"/>



    </LinearLayout>
</ScrollView>