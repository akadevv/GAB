<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/firstLoginLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcolor_gray"
    android:orientation="vertical"
    android:weightSum="100">

    <TextView
        android:id = "@+id/title_firstloginPopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="[입력 정보 확인]"
        android:textSize="25dp"
        android:gravity="center"
        style="@style/GAB_PlainTextView"
        />
    <TextView
        android:id="@+id/textview1_firstloginPopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="필수 입력 정보"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
       android:layout_marginBottom="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="40"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text = "사용자 이름"
            style="@style/GAB_PlainTextView" />

        <TextView
            android:id="@+id/userName"
            android:layout_width="0dp"
            android:layout_weight="60"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="ex)홍길동"
            style="@style/GAB_PlainTextView"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="40"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text = "전화번호"

            style="@style/GAB_PlainTextView" />

        <TextView
            android:id="@+id/userPhoneNum"
            android:layout_width="0dp"
            android:layout_weight="60"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="ex)01012345678"
            style="@style/GAB_PlainTextView"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textview2_firstloginPopup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="추가 입력 정보"
        android:textSize="15dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="40"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text = "은행명"
            style="@style/GAB_PlainTextView" />

        <TextView
            android:id="@+id/userBankName"
            android:layout_width="0dp"
            android:layout_weight="60"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="ex)우리은행"
            style="@style/GAB_PlainTextView"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="40"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:text = "계좌번호"
            style="@style/GAB_PlainTextView" />

        <TextView
            android:id="@+id/userBankNum"
            android:layout_width="0dp"
            android:layout_weight="60"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="ex)63501157102101"
            style="@style/GAB_PlainTextView"
            />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="입력하신 정보가 정확합니까?"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_marginTop="20dp"
        />


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:id="@+id/yesButton_popup"
        android:layout_width="0dp"
        android:layout_weight="50"
        android:layout_height="wrap_content"
        android:text = "예, 맞습니다"/>

    <Button
        android:id="@+id/noButton_popup"
        android:layout_width="0dp"
        android:layout_weight="50"
        android:layout_height="wrap_content"
        android:text = "아니오, 다시 입력하겠습니다"/>


</LinearLayout>

</LinearLayout>

