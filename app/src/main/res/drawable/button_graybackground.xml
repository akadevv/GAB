<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="#828282"
                android:centerColor="#979797"
                android:endColor="#ababab"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#5c3708" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:startColor="#2F2F2F"
                android:centerColor="#434343"
                android:endColor="#565656"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#515151" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="5dp"
                android:top="5dp"
                android:right="5dp"
                android:bottom="5dp" />
        </shape>
    </item>


  </selector>
